{% extends "::layout.html.twig" %}

{% block body %}
	<table class="table table-striped table-hover">
	    <thead>
	        <tr>
	            <th>#</th>
	            <th>Equipe</th>
	            <th>Points</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% set i = 1 %}
	    {% for equipe, points in rank %}
	        <tr>
	            <td>{{ i }}</td>
	            <td>{{ equipe }}</td>
	            <td>{{ points }}</td>
	        </tr>
	        {% set i = i+1 %}
	    {% endfor %}
	    </tbody>
	</table>
{% endblock %}