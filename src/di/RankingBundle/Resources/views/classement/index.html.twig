{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Classement à l'épreuve de {{ epreuve.nom }}</h1>
	
	{% if entities %}
		<table class="table table-striped table-hover">
	        <thead>
	            <tr>
	                <th>Equipe</th>
	                <th>Position</th>
	                <th>Points</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for entity in entities %}
	            <tr>
	                <td>{{ entity.idEquipe.nom }}</td>
	                <td>{{ entity.position }}</td>
	                <td>{{ entity.points }}</td>
	            </tr>
	        {% endfor %}
	        </tbody>
	    </table>
	<a href="{{ path('classement_edit', { 'idEpreuve': epreuve.id }) }}">Editer les résultats</a>
	{% else %}
	<p>Aucun résultat pour le moment.</p>
    <a href="{{ path('di_newResults', { 'idEpreuve': epreuve.id }) }}">Editer les résultats</a>
    {% endif %}
   
    {% endblock %}
