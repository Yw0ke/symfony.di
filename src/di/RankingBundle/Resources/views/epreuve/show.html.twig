{% extends '::layout.html.twig' %}

{% block body -%}
    <h2>Epreuve</h2>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('di_newResults', { 'idEpreuve': entity.id }) }}">
            Entrer les résultats de cette épreuve
        </a>
    </li>
    <li>
        <a href="{{ path('di_dashboard') }}">
            Revenir au Dashboard
        </a>
    </li>
    <li>
        <a href="{{ path('epreuve_edit', { 'id': entity.id }) }}">
            Editer
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
